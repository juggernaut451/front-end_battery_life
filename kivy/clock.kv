<Label>:
    font_name: 'Roboto'
    font_size: 60
    markup: True

<RobotoButton@Button>:
    font_name: 'Roboto'
    font_size: 25
    bold: True
    background_normal: 'button_normal.png'
    background_down: 'button_down.png'
    border: (2, 2, 2, 2)

BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, None)
        spacing: 20
        height: 150
        Label:
            size_hint_y: None
            font_size: 35
            id: status
                    
        Label:
            id: battery_type
            text: 'test'
            size_hint_y: None
            font_size: 35

        Label:
            id: battery_model
            text: 'model'
            size_hint_y: None
            font_size: 35

        Label:
            id: manufacturer
            size_hint_y: None
            font_size: 35

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, None)
        height: 5
        padding: 20
        spacing: 20
        
        Label:
            id: text_status
            text: 'Status'
            font_size: 35
            color: 0, 0, 255

        Label:
            id: text_battery_type
            text: 'Battery Type'
            font_size: 35
            color: 0, 0, 255

        Label:
            id:  text_battery_model
            text: 'Model'
            font_size: 35
            color: 0, 0, 255

        Label:
            id: text_manufacturer
            text: 'Manufacturer'
            font_size: 35
            color: 0, 0, 255

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, None)
        spacing: 20
        height: 150
        
        Label:
            id: percentage
            text: 'percentage'
            size_hint_y: None
            font_size: 35
                   
        Label:
            id: current_now
            text: 'test'
            size_hint_y: None
            font_size: 35

        Label:
            id: voltage_now
            text: 'model'
            size_hint_y: None
            font_size: 35

        Label:
            id: charge_now
            size_hint_y: None
            font_size: 35

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, None)
        height: 10
        padding: 20
        spacing: 20
        
        Label:
            id: text_percentage
            text: 'Charge'
            font_size: 35
            color: 0, 0, 255

        Label:
            id: text_current_now
            text: 'Current'
            font_size: 35
            color: 0, 0, 255

        Label:
            id:  text_voltage_now
            text: 'Voltage'
            font_size: 35
            color: 0, 0, 255

        Label:
            id: text_charge_now
            text: 'Charge(Energy)'
            font_size: 35
            color: 0, 0, 255

    
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, None)
        spacing: 20
        height: 150
        
        Label:
            id: design_capacity
            size_hint_y: None
            font_size: 35
                   
        Label:
            id: last_full_capacity
            text: 'ae'
            size_hint_y: None
            font_size: 35

        Label:
            id: last_full_capacity_perc
            text: ''
            size_hint_y: None
            font_size: 35

        Label:
            id: capacity_loss_perc
            size_hint_y: None
            font_size: 35

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, None)
        height: 10
        padding: 20
        spacing: 20
        
        Label:
            id: text_design_capacity
            text: 'Design Capacity'
            font_size: 35
            color: 0, 0, 255

        Label:
            id: text_last_full_capacity
            text: 'Last Full Charge'
            font_size: 35
            color: 0, 0, 255

        Label:
            id:  text_last_full_capacity_perc
            text: 'Last Full %'
            font_size: 35
            color: 0, 0, 255

        Label:
            id: text_capacity_loss_perc
            text: 'Capacity Loss %'
            font_size: 35
            color: 0, 0, 255


    BoxLayout:
        height: 90
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        size_hint: (1, None)

        RobotoButton:
            id: start_stop
            text: 'Press To Start'
            on_press: app.board()


    Graph:
        id: my_graph
        xlabel: 'Time'
        ylabel: 'Voltage'
