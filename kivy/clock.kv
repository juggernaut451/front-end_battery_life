<Label>:
    font_name: 'Roboto'
    font_size: 60
    markup: True

<RobotoButton@Button>:
    font_name: 'Roboto'
    font_size: 25
    bold: True
    background_normal: 'button_normal.png'
    background_down: 'button_down.png'
    border: (2, 2, 2, 2)

BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        Label:
            size_hint_y: None
            height: 80
            font_size: 65
            id: capacity
            text: '[b]00[/b]%'

        
        Label:
            id: time1
            text: 'anotheu'

    BoxLayout:
        height: 90
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        size_hint: (1, None)

        RobotoButton:
            id: start_stop
            text: 'Start'
            on_press: app.start_stop()

        RobotoButton:
            id: temp
            text: 'temperature'
            on_press: app.temp()

        RobotoButton:
            id: reset
            text: 'Reset'
            on_press: app.reset()
            background_normal: 'red_button_normal.png'
            background_down: 'red_button_down.png'

    Label:
        id: stopwatch
        text: '00:00.[size=40]00[/size]'

    Label:
        id: temp
        text: "hello"
